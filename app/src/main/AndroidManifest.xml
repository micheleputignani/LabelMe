<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="src.com.labelme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".core.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".core.RegistrationActivity" />
        <activity android:name=".core.MainActivity" />
        <activity android:name=".core.FirstCropActivity" />
        <activity android:name=".core.SecondCropActivity" />
        <activity android:name=".core.ExistingLabels" />
        <activity
            android:name=".core.AccountActivity"
            android:label="@string/title_account"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
